<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_head"
    android:orientation="horizontal" >

    <ImageButton android:id="@+id/btnActivity"
        android:src="@drawable/album"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
         android:background="@drawable/selector_music_btn"
        android:layout_margin="2dp"
        android:layout_weight="1.0"
/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3.0"
        android:orientation="vertical"
     >
    <LinearLayout android:layout_height="0dp"
            android:layout_weight="1.0"
           android:layout_width="fill_parent"
            android:gravity="center">
    <TextView android:id="@+id/tvMusicName_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="音乐名"
        android:textColor="#DEFFFFFF"
        android:layout_weight="1.0"
        android:gravity="center"/>
    <TextView android:id="@+id/tvMusicDuration_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="时长"
        android:textColor="#DEFFFFFF"
        android:layout_weight="1.0"
        android:gravity="center"/>
    </LinearLayout>
      <LinearLayout android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            android:gravity="center">
      <ImageButton android:id="@+id/btnPre_widget"
               android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_weight="1.0"
	        android:src="@drawable/player_pre"
	        android:background="@drawable/selector_music_btn"
	        android:scaleType="fitCenter"
	      />
      <ImageButton android:id="@+id/btnPlay_widget"
           android:layout_width="0dp" 
	        android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_centerVertical="true"
	        android:layout_weight="1"
	        android:src="@drawable/player_play"
	        android:background="@drawable/selector_music_btn"
	        android:scaleType="fitCenter"
	    />
      <ImageButton android:id="@+id/btnNext_widget"
            android:layout_width="0dp" 
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	    	android:layout_weight="1"
	        android:src="@drawable/player_next"
	        android:background="@drawable/selector_music_btn"
	        android:scaleType="fitCenter"
	    />
    </LinearLayout>
</LinearLayout>
</LinearLayout>